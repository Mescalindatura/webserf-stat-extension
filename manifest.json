{
  "manifest_version": 3,
  "name": "Active tab statistics for Chrome",
  "version": "1.0",
  "icons": {
    "16": "images/bar-chart-16.png",
    "32": "images/bar-chart-32.png",
    "48": "images/bar-chart-64.png",
    "128": "images/bar-chart-128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["https://developer.chrome.com/*"],
  "permissions": ["tabs"]
}